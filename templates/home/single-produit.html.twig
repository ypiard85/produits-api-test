{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row flex-column-reverse flex-md-row">
        <div class="col-md-6">
            <a href="{{ path('app_home') }}" class="btn btn-primary d-inline-block">Revenir à l'accueil</a>
            <h4> {{ produit.titre }} </h4>
            <p>Code barre : {{ produit.ean }} </p>
            <div class="ingredients bg-primary p-3">
                <h3 class="text-white">Ingrédients</h3>
                <ul>
                    {% for ingredient in produit.ingredients %}
                        {% if ingredient | length != "" %}
                    <li class="text-white">{{ ingredient }}</li>
                        {% endif %}
                    {% endfor%}
                </ul>
            </div>
            <div class="mt-3">
                <h3 class="">Nutriments</h3>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Informations nutritionnelles</th>
                        <th scope="col">Tel que vendu pour 100 g / 100 ml</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">Énergie</th>
                        <td>
                            {{ produit.kj | number_format(0, '.', ' ') }} kj
                            <br>
                            ({{ produit.kcal | number_format(0, '.', '.') }}) kcal
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Matières grasses
                            <br>
                            <span class="ms-3">Acides gras saturés</span>

                        </th>
                        <td>
                            {{ produit.matieresGrasses }} g <br>
                            {{ produit.acidesGrasSatures }} g
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Glucides
                            <br>
                            <span class="ms-3">Sucres</span>

                        </th>
                        <td>
                            {{ produit.glucides }} g <br>
                            {{ produit.sucres }} g
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Fibres alimentaires</th>
                        <td>
                            {{ produit.fibres }} g
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Protéines</th>
                        <td>
                            {{ produit.proteines }} g
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Sels</th>
                        <td>
                            {{ produit.sel }} g
                        </td>
                      </tr>
                    </tbody>
                  </table>
            </div>
        </div>
        <div class="col-md-4 offset-2 mb-5">
            <img src="{{ produit.photoUrl }}" alt="">
        </div>
    </div>
</div>
{% endblock%}